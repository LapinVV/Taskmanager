<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:Course_work.Converters"
             x:Class="Course_work.Pages.AllTasksPage"
             Title="Все задачи"
             BackgroundColor="White">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Правильное объявление конвертера -->
            <conv:PriorityToColorConverter x:Key="PriorityToColorConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <CollectionView x:Name="TasksList"
                    ItemsLayout="VerticalList"
                    SelectionMode="None"
                    Margin="10">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="10"
                      ColumnDefinitions="40,*"
                      RowDefinitions="Auto">

                    <!-- Индикатор приоритета -->   
                    <Ellipse WidthRequest="28"
                             HeightRequest="28"
                             StrokeThickness="3"
                             Stroke="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                             Fill="Transparent" />

                    <!-- Текст задачи -->
                    <VerticalStackLayout Grid.Column="1"
                                         Spacing="4"
                                         Padding="12,0">
                        <Label Text="{Binding Title}"
                               FontSize="20"
                               TextColor="#111" />
                        <Label Text="{Binding Description}"
                               FontSize="14"
                               TextColor="#777" />
                    </VerticalStackLayout>

                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>