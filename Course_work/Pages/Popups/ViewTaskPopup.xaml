<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Course_work.Pages.Popups.ViewTaskPopup"
    IsVisible="False"
    BackgroundColor="#80000000">

    <Grid
        Padding="20"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Border
            BackgroundColor="White"
            Stroke="#DDDDDD"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 18">

            <VerticalStackLayout Spacing="16" Padding="20">

                <!-- Заголовок окна -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="Просмотр задачи"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#111" />

                    <ImageButton
                        Source="close.png"
                        WidthRequest="28"
                        BackgroundColor="Transparent"
                        Clicked="OnCloseClicked"/>
                </Grid>

                <!-- Заголовок задачи (readonly) -->
                <Label x:Name="TitleLabel"
                       FontSize="20"
                       TextColor="#222"
                       FontAttributes="Bold"/>

                <!-- Поле ввода (редактируемый режим в будущем) -->
                <Border x:Name="TitleBorder"
                        Stroke="#CCCCCC"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 12"
                        Padding="10">

                    <Label x:Name="TitleReadonly"
                           FontSize="15"
                           TextColor="#111"/>
                </Border>

                <!-- Описание -->
                <Label x:Name="DescriptionLabel"
                       FontSize="15"
                       TextColor="#444"/>

                <!-- Дата -->
                <Label x:Name="DateTimeLabel"
                       FontSize="15"
                       TextColor="#444"
                       HorizontalOptions="Center"/>

                <!-- КНОПКИ -->
                <Grid ColumnDefinitions="*,*,*" ColumnSpacing="10">

                    <Button Text="Удалить"
                            Grid.Column="0"
                            FontSize="13"
                            CornerRadius="10"
                            BackgroundColor="#D9534F"
                            TextColor="White"
                            Clicked="OnDeleteClicked"/>

                    <Button Text="Редактировать"
                            Grid.Column="1"
                            FontSize="13"
                            CornerRadius="10"
                            BackgroundColor="#F0AD4E"
                            TextColor="White"
                            Clicked="OnEditClicked"/>

                    <Button Text="Выполнить"
                            Grid.Column="2"
                            FontSize="13"
                            CornerRadius="10"
                            BackgroundColor="#5CB85C"
                            TextColor="White"
                            Clicked="OnCompleteClicked"/>

                </Grid>

            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentView>